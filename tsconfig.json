{
  "compilerOptions": {
    "target": "ES2017",
    "module": "ESNext",
    "lib": ["es2017", "dom"],
    "outDir": ".tmp/build/",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "strict": false,
    "skipLibCheck": true,
    "resolveJsonModule": true
  },
  "files": [
    "src/visual.ts"
  ],
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}
